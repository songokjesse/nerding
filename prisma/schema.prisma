generator client {
  provider = "prisma-client"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  role          Role      @default(VIEWER)
  banned        Boolean   @default(false)

  organisationMemberships OrganisationMember[]
  createdClients          Client[]
  shiftsAsWorker          Shift[]              @relation("ShiftWorker")
  createdShifts           Shift[]              @relation("ShiftCreatedBy")
  authoredNotes           ProgressNote[]       @relation("NoteAuthor")
  createdReports          MonthlyReport[]      @relation("ReportCreatedBy")
  reviewedReports         MonthlyReport[]      @relation("ReportReviewedBy")

  @@unique([email])
  @@map("user")
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
  VIEWER
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Organisation {
  id           String   @id @default(uuid())
  name         String
  billingEmail String?
  plan         String   @default("free")
  createdAt    DateTime @default(now())

  members        OrganisationMember[]
  clients        Client[]
  shifts         Shift[]
  progressNotes  ProgressNote[]
  monthlyReports MonthlyReport[]

  @@map("organisation")
}

model OrganisationMember {
  id             String       @id @default(uuid())
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  organisationId String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  role           OrgRole      @default(WORKER)
  createdAt      DateTime     @default(now())

  @@unique([organisationId, userId])
  @@map("organisation_member")
}

enum OrgRole {
  ORG_ADMIN
  COORDINATOR
  WORKER
  VIEWER
}

model Client {
  id             String       @id @default(uuid())
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  organisationId String
  name           String
  ndisNumber     String?
  dateOfBirth    DateTime?
  notes          String?
  createdAt      DateTime     @default(now())
  createdBy      User?        @relation(fields: [createdById], references: [id])
  createdById    String?

  shifts         Shift[]
  progressNotes  ProgressNote[]
  monthlyReports MonthlyReport[]
  enabledModules ClientModule[]

  @@map("client")
}

model Shift {
  id               String       @id @default(uuid())
  organisation     Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  organisationId   String
  client           Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId         String
  worker           User         @relation("ShiftWorker", fields: [workerId], references: [id])
  workerId         String
  startTime        DateTime
  endTime          DateTime
  status           ShiftStatus  @default(PLANNED)
  serviceType      String?
  location         String?
  clockInTime      DateTime?
  clockOutTime     DateTime?
  clockInLocation  Json?
  clockOutLocation Json?
  createdAt        DateTime     @default(now())
  createdBy        User?        @relation("ShiftCreatedBy", fields: [createdById], references: [id])
  createdById      String?

  progressNotes ProgressNote[]

  @@map("shift")
}

enum ShiftStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

model ProgressNote {
  id             String        @id @default(uuid())
  organisation   Organisation  @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  organisationId String
  client         Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId       String
  shift          Shift         @relation(fields: [shiftId], references: [id], onDelete: Cascade)
  shiftId        String
  author         User          @relation("NoteAuthor", fields: [authorId], references: [id])
  authorId       String
  createdAt      DateTime      @default(now())
  noteText       String
  incidentFlag   Boolean       @default(false)
  behavioursFlag Boolean       @default(false)
  medicationFlag Boolean       @default(false)
  mood           String?
  goalId         String?
  observations   Observation[]

  @@map("progress_note")
}

model MonthlyReport {
  id             String       @id @default(uuid())
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  organisationId String
  client         Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId       String
  reportMonth    DateTime
  summaryText    String
  metricsJson    Json?
  generatedByAI  Boolean      @default(true)
  createdAt      DateTime     @default(now())
  createdBy      User?        @relation("ReportCreatedBy", fields: [createdById], references: [id])
  createdById    String?
  reviewedBy     User?        @relation("ReportReviewedBy", fields: [reviewedById], references: [id])
  reviewedById   String?

  @@unique([organisationId, clientId, reportMonth])
  @@map("monthly_report")
}

model ClientModule {
  id         String     @id @default(uuid())
  client     Client     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId   String
  moduleType ModuleType
  isEnabled  Boolean    @default(true)
  config     Json? // For any module-specific settings
  updatedAt  DateTime   @updatedAt

  @@unique([clientId, moduleType])
  @@map("client_module")
}

enum ModuleType {
  BOWEL_MONITORING
  FLUID_INTAKE
  BEHAVIOUR_OBSERVATION
  SEIZURE_MONITORING
  BGL_MONITORING
}

model Observation {
  id             String       @id @default(uuid())
  progressNote   ProgressNote @relation(fields: [progressNoteId], references: [id], onDelete: Cascade)
  progressNoteId String
  type           ModuleType
  data           Json // Flexible structure for different observation types
  recordedAt     DateTime // Time entered in the form, not submission time

  @@map("observation")
}
